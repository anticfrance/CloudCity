@model IEnumerable<CloudCityCenter.Models.Server>

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Наши услуги</h2>
        <div id="servicesCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model?.Any() == true)
                {
                    var index = 0;
                    foreach (var server in Model)
                    {
                        var active = index == 0 ? "active" : string.Empty;
                        <div class="carousel-item @active text-center">
                            <img src="@server.ImageUrl" class="d-block w-100" alt="@server.Name" />
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@server.Name</h5>
                                <p>@server.Location - $@server.PricePerMonth / month</p>
                                <a asp-controller="Servers" asp-action="Details" asp-route-id="@server.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            </div>
                        </div>
                        index++;
                    }
                }
                else
                {
                    <div class="carousel-item active text-center">
                        <img src="https://via.placeholder.com/1200x400" class="d-block w-100" alt="No servers" />
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Сервера отсутствуют</h5>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#servicesCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#servicesCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="text-center">
            <a class="btn btn-primary mt-3" asp-controller="Servers" asp-action="Index">
                View All Services
            </a>
        </div>
    </div>
</section>
